<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <title>Clothes - Guang Guang App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-light border-bottom">
    <div class="container-fluid text-center">
      <a class="navbar-brand mx-auto logo" href="/">Guang Guang App</a>
    </div>
  </nav>
  <nav class="navbar navbar-expand-sm navbar-light border-bottom">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Products <i class="fas fa-shopping-bag"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/Product">Main Products</a></li>
              <li><a class="dropdown-item" href="/addProduct">Add New Product</a></li>
              <li><a class="dropdown-item" href="/Products">Edit Product Database</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownClothes" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Clothes <i class="fas fa-tshirt"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownClothes">
              <li><a class="dropdown-item" href="/clothes">Clothes page</a></li>
              <li><a class="dropdown-item" href="/addClothes">Add Clothes</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownFurniture" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Furniture <i class="fas fa-bed"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownFurniture">
              <li><a class="dropdown-item" href="/furniture">Furniture page</a></li>
              <li><a class="dropdown-item" href="/addFurniture">Add New Furniture</a></li>
              <li><a class="dropdown-item" href="/furniture">Edit Furnitures Database</a></li>
            </ul>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Clothes from Guang Guang App Database</h2></div>
    <br>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% clothes.forEach(clothes => { %>
        <div class="col mb-4">
          <div class="card h-100">
            <img src="<%= clothes.image %>" class="card-img-top" alt="<%= clothes.clothesName %>">
            <div class="card-body">
              <h5 class="card-title"><%= clothes.clothesName %></h5>
              <p class="card-text">Quantity: <%= clothes.quantity %></p>
              <p class="card-text">Price: $<%= clothes.price.toFixed(2) %></p>
              <p class="card-text">Size: <%= clothes.size %></p>
              <p class="card-text">Color: <%= clothes.color %></p>
              <p class="card-text">Material: <%= clothes.material %></p>
              <a href="/clothing/<%= clothes.clothesId %>" class="btn btn-primary">View</a>
              <a href="/editClothing/<%= clothes.clothesId %>" class="btn btn-secondary">Edit</a>
              <a href="/deleteClothing/<%= clothes.clothesId %>" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

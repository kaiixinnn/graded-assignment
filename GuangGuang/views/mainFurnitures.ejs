<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Main Furniture - Guang Guang App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    .card {
      transition: transform 0.2s;
      border: none;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .card:hover {
      transform: scale(1.05);
      box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
    }
    .card-img-top {
      height: 300px; /* Set a fixed height for the images */
      object-fit: cover; /* Ensure the image covers the entire card */
      border-radius: 10px 10px 0 0;
    }
    .card-body {
      padding: 1.5rem;
    }
    .card-title {
      font-size: 1.5rem;
      font-weight: bold;
      color: #333;
    }
    .card-text {
      color: #666;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-light border-bottom">
    <div class="container-fluid text-center">
      <a class="navbar-brand mx-auto logo" href="/">Guang Guang App</a>
    </div>
  </nav>
  <nav class="navbar navbar-expand-sm navbar-light border-bottom">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Products <i class="fas fa-shopping-bag"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/Product">Main Products</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownClothes" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Clothes <i class="fas fa-tshirt"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownClothes">
              <li><a class="dropdown-item" href="/clothes">Clothes page</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownFurniture" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Furniture <i class="fas fa-bed"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownFurniture">
              <li><a class="dropdown-item" href="/furnitures">Furniture page</a></li>
            </ul>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Main Furniture from Guang Guang App Database</h2></div>
    <br>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% furniture.forEach(item => { %>
        <div class="col mb-4">
          <div class="card h-100">
            <img src="<%= item.image %>" class="card-img-top" alt="<%= item.furnitureName %>">
            <div class="card-body">
              <h5 class="card-title"><%= item.furnitureName %></h5>
              <p class="card-text">Quantity: <%= item.quantity %></p>
              <p class="card-text">Price: $<%= item.price.toFixed(2) %></p>
              <p class="card-text">Material: <%= item.material %></p>
              <p class="card-text">Style: <%= item.style %></p>
              <a href="/furniture/<%= item.furnitureId %>" class="btn btn-primary">Shop</a> <!-- Changed the URL here -->
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

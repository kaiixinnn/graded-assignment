<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <title>Products - Guang Guang App</title>
  <style>
    .card {
      transition: transform 0.2s;
    }
    .card:hover {
      transform: scale(1.05);
    }
    .card-img-top {
      height: 300px; /* Set a fixed height for the images */
      object-fit: cover; /* Ensure the image covers the entire card */
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-light border-bottom">
    <div class="container-fluid text-center">
      <a class="navbar-brand mx-auto logo" href="/">Guang Guang App</a>
    </div>
  </nav>
  <nav class="navbar navbar-expand-sm navbar-light border-bottom">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Products <i class="fas fa-shopping-bag"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/product">Main Products</a></li>
              <li><a class="dropdown-item" href="/addProduct">Add New Product</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownClothing" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Clothing <i class="fas fa-tshirt"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownClothing">
              <li><a class="dropdown-item" href="/clothing">Clothing page</a></li>
              <li><a class="dropdown-item" href="/addClothes">Add New Product</a></li>     
              <li><a class="dropdown-item" href="/clothing">Edit Clothes Database</a></li>         
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownFurniture" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Furniture <i class="fas fa-bed"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownFurniture">
              <li><a class="dropdown-item" href="/furnitures">Furniture page</a></li>
              <li><a class="dropdown-item" href="/addFurniture">Add New Furniture</a></li>
              <li><a class="dropdown-item" href="/furniture">Edit Furnitures Database</a></li>
            </ul>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Products from Guang Guang App Database</h2></div>
    <br>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="card-text">Quantity: <%= product.quantity %></p>
              <p class="card-text">Price: $<%= product.price.toFixed(2) %></p>
              <a href="/product/<%= product.productId %>" class="btn btn-primary">View Details</a>
              <a href="/editProduct/<%= product.productId %>" class="btn btn-secondary">Edit</a>
              <a href="/deleteProduct/<%= product.productId %>" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

